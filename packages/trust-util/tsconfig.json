{
    "compilerOptions": {
        "target": "ESNext",
        "module": "umd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "lib": [
        "esnext",
        "dom"
      ],
    "files": [
        "src/index.ts",
    ],
    "include": ["src/**/*.ts"],
    "exclude": [
        // 排除掉哪些类库
        "node_modules",
        "gulpfile.ts",
        "example",
        "**/node_modules",
        "**/__tests__",
        "lib", "es"
      ]
}
